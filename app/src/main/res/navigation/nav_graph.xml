<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dawnbellsuha.uha.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <!-- Add actions if needed -->
        <action
            android:id="@+id/action_home_to_first"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.dawnbellsuha.uha.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/resourcesFragment"
        android:name="com.dawnbellsuha.uha.fragments.ResourcesFragment"
        android:label="Resources"
        tools:layout="@layout/fragment_resources" />

    <!-- Include the secondary flow -->
    <include app:graph="@navigation/nav_graph2" />
</navigation>