<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient_bg"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📚 Educational Resources"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discover, Learn, Excel"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Career & Exam Guidance Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/career_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🎯 Career &amp; Exam Guidance"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:layout_marginStart="8dp"
                        app:tint="@color/primary_blue" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_career_guidance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expert advice on career paths and exam strategies..."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_read_more_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read More"
                    android:textColor="@color/primary_blue"
                    android:backgroundTint="@color/transparent"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.Material3.Button.TextButton" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Today in History Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/history_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📅 Today in History"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_history_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="July 19"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:background="@drawable/date_badge_bg"
                        android:padding="6dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_history_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="On this day in history, remarkable events shaped our world..."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/accent_orange" />

                    <TextView
                        android:id="@+id/tv_history_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Featured Year: 1969"
                        android:textColor="@color/accent_orange"
                        android:textSize="12sp"
                        android:layout_marginStart="6dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Festival/Educational Day Specials -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/festival_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎉 Festival &amp; Educational Specials"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/special_event_bg"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_special_event_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="World Day for International Justice"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_special_event_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Learn about global justice and human rights..."
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚖️"
                        android:textSize="32sp"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Did You Know Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/fact_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="💡 Did You Know?"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_refresh_fact"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/primary_blue"
                        app:iconSize="16dp"
                        android:backgroundTint="@color/button_bg_light"
                        app:cornerRadius="18dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_did_you_know"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The human brain uses about 20% of the body's total energy, despite weighing only 2% of body weight!"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="2dp"
                    android:background="@drawable/fact_bubble_bg"
                    android:padding="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🧠 Science"
                        android:textColor="@color/category_science"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textColor="@color/primary_blue"
                        android:textSize="12sp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Educational Meme/Infographic Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/meme_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎨 Educational Visual of the Day"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/iv_educational_visual"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/image_placeholder_bg"
                        android:src="@drawable/placeholder_infographic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/overlay_gradient"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tv_visual_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Understanding Photosynthesis"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_visual_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Visual guide to how plants make food"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:alpha="0.9" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🔬 Biology"
                        android:textColor="@color/category_biology"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_download"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="2dp"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/primary_blue" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_share"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="2dp"
                        app:tint="@color/primary_blue" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Expert Quotes Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/quote_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💬 Words from Mentors"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/quote_bg"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/quote_accent"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:alpha="0.7" />

                    <TextView
                        android:id="@+id/tv_expert_quote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The beautiful thing about learning is that no one can take it away from you."
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginTop="-8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="2dp">

                            <ImageView
                                android:id="@+id/iv_mentor_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder_avatar" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tv_mentor_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="B.B. King"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_mentor_designation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Legendary Musician &amp; Educator"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_favorite_border"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            app:tint="@color/heart_red" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>