<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_background_gradient"
    android:fillViewport="true"
    tools:context=".registration.PhoneAuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Go back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone Verification"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dark_navy"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </LinearLayout>

        <!-- Phone Icon Illustration -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_phone_verification"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Title and Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Your Phone"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/dark_navy"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We'll send you a 6-digit verification code to confirm your phone number."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="40dp" />

        <!-- Phone Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Phone Number Input with Indian Flag -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="@color/bright_blue"
                    app:hintTextColor="@color/bright_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <!-- Indian Flag and Code -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_indian_flag"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+91"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:background="@color/divider_color" />

                        <!-- Phone Number Input -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhoneNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Enter 10-digit mobile number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:background="@android:color/transparent"
                            android:textColorHint="@color/black" />
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Send OTP Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Send OTP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="@color/bright_blue"
                    app:cornerRadius="16dp"
                    app:elevation="8dp"
                    app:icon="@drawable/ic_send"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <!-- OTP Sent Message (Initially Hidden) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    android:id="@+id/llOtpSentMessage"
                    android:background="@drawable/success_message_background"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/success_color"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvOtpSentMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OTP sent to +91xxxxxxxxxx"
                        android:textSize="14sp"
                        android:textColor="@color/success_color"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- OTP Input (Initially Hidden) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@drawable/ic_security"
                    app:startIconTint="@color/bright_blue"
                    app:boxStrokeColor="@color/bright_blue"
                    app:hintTextColor="@color/bright_blue"
                    app:helperText="Enter the 6-digit code sent to your phone"
                    app:helperTextTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter 6-digit OTP"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:letterSpacing="0.3" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Verify OTP Button (Initially Hidden) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerifyOtp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Verify OTP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="@color/success_color"
                    app:cornerRadius="16dp"
                    app:elevation="8dp"
                    app:icon="@drawable/ic_check"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp" />

                <!-- Timer Text (Initially Hidden) -->
                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Resend OTP in 60 seconds"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Resend OTP Button (Initially Hidden) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Resend OTP"
                    android:textSize="14sp"
                    android:textColor="@color/bright_blue"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/bright_blue"
                    app:strokeWidth="2dp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_refresh"
                    app:iconTint="@color/bright_blue"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Help Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By continuing, you agree to receive SMS messages from UHA for verification purposes."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="16dp" />

            <!-- Security Note -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/security_note_background"
                android:padding="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_security_small"
                    app:tint="@color/success_color"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your number is safe and secure with us"
                    android:textSize="12sp"
                    android:textColor="@color/success_color"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Troubleshooting Section (Initially Hidden) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvTroubleshooting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/live_red"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/sunset_red"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Having trouble receiving OTP?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/sunset_red"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Check your network connection\n• Ensure you entered the correct number\n• Wait a few minutes before requesting again\n• Check spam/blocked messages"
                    android:textSize="14sp"
                    android:textColor="@color/sunset_red"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>