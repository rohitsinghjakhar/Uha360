<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_background_gradient"
    tools:context=".activities.SplashActivity">

    <!-- Dynamic gradient overlay -->
    <View
        android:id="@+id/gradient_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"/>

    <!-- Floating particles background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/floating_particles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.08"
        app:lottie_rawRes="@raw/sparkle_effect"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Main content container with card-like appearance -->
    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:elevation="16dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="16dp"
        android:alpha="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp">

            <!-- Logo container with enhanced animations -->
            <RelativeLayout
                android:id="@+id/logo_container"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp">

                <!-- Outer glow ring -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/outer_glow"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    app:lottie_rawRes="@raw/pulse_ring"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_speed="0.8"
                    app:lottie_colorFilter="@color/glow_blue"
                    android:layout_centerInParent="true"
                    android:alpha="0.6"/>

                <!-- Inner rotating ring -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/inner_ring"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    app:lottie_rawRes="@raw/rotating_ring"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_speed="0.3"
                    app:lottie_colorFilter="@color/accent_purple"
                    android:layout_centerInParent="true"
                    android:alpha="0.4"/>

                <!-- Main logo with shadow -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="90dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/logo_background">

                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_uha_logo"
                        android:scaleType="centerInside"/>
                </androidx.cardview.widget.CardView>

                <!-- Sparkle effects -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/sparkles"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    app:lottie_rawRes="@raw/sparkle_effect"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_speed="0.6"
                    android:layout_centerInParent="true"
                    android:alpha="0.7"/>
            </RelativeLayout>

            <!-- App title with modern typography -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kalam_bold"
                    android:letterSpacing="0.08"
                    android:text="UHA"
                    android:textColor="@color/title_gradient_start"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>

            </LinearLayout>

            <!-- Enhanced tagline -->
            <TextView
                android:id="@+id/app_tagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kalam_bold"
                android:text="@string/app_tagline"
                android:textColor="@color/tagline_color"
                android:textSize="15sp"
                android:alpha="0.85"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:letterSpacing="0.02"/>

            <!-- Modern loading indicator -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loading_dots"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:lottie_rawRes="@raw/loading"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />

            </RelativeLayout>

            <!-- Enhanced bottom branding inside card -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/branding_background_inline">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dawnbells_mini"
                    android:alpha="0.9"/>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>