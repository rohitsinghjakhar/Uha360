<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:fillViewport="true"
    tools:context=".teacher.RegistrationFormActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/primary_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join UHA Community"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalam_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Register with us to become part of our educational community"
                    android:textSize="14sp"
                    android:textColor="@color/light_text"
                    android:textAlignment="center"
                    android:fontFamily="@font/kalam_regular" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Registration Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/form_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/header_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Registration Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration Category *"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/kalam_bold"
                    android:drawableStart="@drawable/ic_category"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/primary_light" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/input_background">

                    <Spinner
                        android:id="@+id/spinner_registration_category"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:padding="16dp"
                        android:popupBackground="@color/white" />

                </androidx.cardview.widget.CardView>

                <!-- Full Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_full_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Full Name *"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Email Address *"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_phone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Phone Number *"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Organization/Institution Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_organization"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Organization/Institution Name"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_business"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_organization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Position/Designation -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_position"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Position/Designation"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_work"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Experience/Background -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_experience"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Experience/Background"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_experience"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_experience"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- City/Location -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_location"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="City/Location"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_location"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- How did you hear about us -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_hear_about"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="How did you hear about us?"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_info"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_hear_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Additional Message -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_message"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="Additional Message"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    app:startIconDrawable="@drawable/ic_message"
                    app:startIconTint="@color/primary_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_message"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/kalam_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit_registration"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Submit Registration"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/kalam_bold"
                    app:backgroundTint="@color/primary_light"
                    app:cornerRadius="28dp"
                    app:elevation="8dp"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_send"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

                <!-- Loading Indicator -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary_light" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>